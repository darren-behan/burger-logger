<h1>Eat-Da-Burger!</h1>

<h2>Burgers ready to eat!</h2>
<!-- Pass in data from server.js -->
<ul>
  {{#each burgers}}
    {{#unless devoured }}
      {{> burgers/burger-block devoured=false }}
    {{/unless}}
  {{/each}}
</ul>

{{!-- <button class="devour" data-id="{{this.id}}">DEVOUR!</button> --}}

<h2>Burgers devoured!</h2>
<!-- Pass in data from server.js -->
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>  
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add burger</button>

  <p>Enter a burger you want to eat - Click 'Add burger' when you're done!</p>
</form>
